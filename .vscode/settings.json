{
  "editor.fontFamily": "'Monaspace Neon', monospace",
  "editor.fontWeight": "400",
  "editor.fontLigatures": "'calt', 'liga', 'dlig', 'ss01', 'ss02', 'ss03', 'ss04', 'ss05', 'ss06', 'ss07', 'ss08'",
  "editor.codeActionsOnSave": {
    "source.addMissingImports": "explicit",
    "source.fixAll.eslint": "explicit",
    "source.fixAll.stylelint": "explicit"
  },
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "eslint.workingDirectories": [
    {
      "mode": "auto"
    }
  ],
  "eslint.validate": [
    "graphql"
  ],
  "workbench.editorAssociations": {
    "*.md": "vscode.markdown.preview.editor",
  },
  "github-actions.workflows.pinned.workflows": [
    "./.github/workflows/*.yml",
    ".github/workflows/ci.yml"
  ],
  "files.exclude": {
    "**/.swc": true,
    "**/.cache": true,
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/*/**": true,
    "./src/__generated": true,
  },
  "window.autoDetectColorScheme": true,
  "workbench.preferredDarkColorTheme": "Default Dark Modern",
  "workbench.preferredLightColorTheme": "Default Dark Modern",
  "typescript.tsserver.experimental.enableProjectDiagnostics": false,
  // "terminal.integrated.shellIntegration.suggestEnabled": true,
  "auto-run-command.rules": [
    {
      "event": "onFileCreate",
      "command": "typescript.restartTsServer"
    },
    {
      "event": "onFileRename",
      "command": "typescript.restartTsServer"
    },
    {
      "event": "onFileDelete",
      "command": "typescript.restartTsServer"
    },
    // {
    //   "command": "workbench.action.terminal.new",
    //   "condition": [
    //     "isRunningInContainer"
    //   ]
    // },
    {
      "command": "workbench.action.tasks.runTask codegen-ipc-daemon",
      "condition": [
        "isRunningInContainer"
      ]
    }
  ],
  "javascript.preferGoToSourceDefinition": true,
  "typescript.tsdk": "./node_modules/typescript/lib",
  // "typescript.tsc.autoDetect": "off", 
  "css.validate": false,
  "stylelint.validate": [
    "css"
  ],
  "search.exclude": {
    "**/.git": true,
    "**/node_modules": true,
    "**/.analyzer": true,
    "yarn.lock": true,
  },
  "editor.wordWrap": "wordWrapColumn",
  "editor.wordWrapColumn": 90,
  "cssVariables.lookupFiles": [
    "**/*.css",
    "**/*.scss",
    "**/*.sass",
    "**/*.less",
    "node_modules/@mantine/core/styles.css"
  ],
  "typescript.preferences.importModuleSpecifierEnding": "index",
  // "remote.autoForwardPortsFallback": 0,
  "remote.localPortHost": "allInterfaces",
  "window.zoomLevel": -1,
  "editor.fontSize": 13,
  "terminal.integrated.fontSize": 13,
  "orta.vscode-twoslash-queries.maxLength": 120,
}