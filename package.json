  "description": "This Project provides a modern UI to interact with the Rest API provided by (https://github.com/sidoh/esp8266_milight_hub)",
  "main": "index.js",
  "scripts": {
    "postinstall": "",
    "ws": "yarn workspace",
    "wss": "yarn workspaces",
    "bootstrap": "yarn ws api bootstrap && yarn ws client bootstrap",
    "bootstrap:ci": "yarn ws api bootstrap:ci && yarn ws client bootstrap:ci",
    "reset:node_modules": "rm -rf node_modules/* node_modules/.[!.]*",
    "reset": "yarn ws client reset && yarn ws api reset && yarn reset:node_modules && rm -rf /home/vscode/.cache",
    "upgrade:latest": "yarn upgrade-interactive --latest --emoji && bash -c 'if [ -n \"$(git diff yarn.lock)\" ]; then yarn postinstall; fi'",
    "test": "yarn ws api test run && yarn ws client test run && vitest --no-isolate --pool=threads run",
    "lint:tsc": "tsc -b tsconfig.json",
    "lint": "yarn ws api lint && yarn ws client lint",
    "lint:ci": "yarn ws api lint:ci && yarn ws client lint:ci",
    "build": "yarn ws api build && yarn ws client build",
    "deploy": "echo \"TODO: client dist -> cloudflare pages | -> docker image create -> docker compose push -> kubectl\""
  },
