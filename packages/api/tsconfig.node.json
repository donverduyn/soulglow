{
  "extends": "./tsconfig.options.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "outDir": "dist/node",
    "emitDeclarationOnly": true,
    "allowJs": true,
    "types": ["node"],
  },
  "exclude": [
    "**/node_modules/**/*",
    "dist/**/*",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/.*/**/*.test.ts",
    "**/.*/**/*.test.tsx",
  ],
  "include": [
    "src/**/*",
    "src/**/*.json",
    "**/*.ts"
  ],
}