{
  "extends": "./tsconfig.options.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "outDir": ".cache/tsc/node",
    "allowJs": true,
    "types": ["node"],
  },
  "exclude": [
    "**/node_modules/**/*",
    "dist/**/*",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/.*/**/*.test.ts",
    "**/.*/**/*.test.tsx",
  ],
  "include": [
    "scripts/**/*",
    "types/node/**/*",
    ".devcontainer/**/*", 
    ".vite/**/*",
    ".eslint/**/*",
    ".postcss/**/*",
    ".codegen/**/*",
    "*.base.ts",
    "*.config.ts",
    "*.workspace.ts",
    "codegen.client.ts",
    "postcss.config.cjs",
    ".eslintrc.cjs",
    "public.ts",
  ],
}